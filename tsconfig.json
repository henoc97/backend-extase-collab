{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
